{{#if urlBD}}

    <form action="/editar/{{urlBD._id}}" method="post">
    <input type="hidden" name="_csrf" value="{{csrfToken}}" />
    <input value="{{urlBD.origin}}" type="text" placeholder="ingrese url" name="origin" class="form.control my-2 w-100">
    <button type="submit" class="btn btn-warning w-100 mb-2">editar URL</button>
    </form>

     {{else}}

     <form action="/" method="post">
     <input type="hidden" name="_csrf" value="{{csrfToken}}" />
     <input type="text" placeholder="ingrese url" name="origin" class="form.control my-2 w-100">
     <button type="submit" class="btn btn-primary w-100 mb-2">Agregar URL</button>
     </form>
{{/if}}
 